{
  "name": "mongolian-warcraft-gaming-platform-client",
  "version": "1.0.3",
  "description": "Mongolian Warcraft Gaming Platform Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.tuguldur.wc3platform",
    "productName": "Mongolian Warcraft Gaming Platform",
    "icon": "src/renderer/icon.png",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "src/renderer/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mongolian Warcraft Platform",
      "include": "nsis-extra.nsh"
    },
    "extraResources": [
      {
        "from": "resources/ZeroTierOne.msi",
        "to": "ZeroTierOne.msi",
        "filter": ["**/*"]
      }
    ],
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache"
    ],
    "publish": {
      "provider": "github",
      "owner": "Tuguldur0107",
      "repo": "mongolian-warcraft-gaming-platform"
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "electron-updater": "^6.8.3",
    "qrcode": "^1.5.4",
    "socket.io-client": "^4.7.2",
    "w3gjs": "^2.3.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
