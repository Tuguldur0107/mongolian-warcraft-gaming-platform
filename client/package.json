{
  "name": "mongolian-warcraft-gaming-platform-client",
  "version": "1.0.0",
  "description": "Mongolian Warcraft Gaming Platform Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.tuguldur.wc3platform",
    "productName": "Mongolian Warcraft Gaming Platform",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache"
    ]
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "qrcode": "^1.5.4",
    "socket.io-client": "^4.7.2",
    "w3gjs": "^2.3.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
